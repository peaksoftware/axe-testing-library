{
  "name": "axe-testing-library",
  "version": "0.1.4",
  "description": "Extensions for automated aXe accessibility testing for popular test tooling",
  "exports": {
    "./jest": {
      "types": "./dist/jest.d.ts",
      "import": "./dist/jest.mjs",
      "require": "./dist/jest.js"
    },
    "./vitest": {
      "types": "./dist/vitest.d.ts",
      "import": "./dist/vitest.mjs",
      "require": "./dist/vitest.js"
    },
    "./playwright": {
      "types": "./dist/playwright.d.ts",
      "import": "./dist/playwright.mjs",
      "require": "./dist/playwright.js"
    }
  },
  "scripts": {
    "build": "tsup",
    "test": "npm run jest && npm run vitest && npm run playwright",
    "jest": "jest",
    "playwright": "npx playwright test",
    "vitest": "vitest run",
    "lint": "eslint . --ext .ts",
    "changeset": "changeset",
    "release": "npm run build && changeset publish"
  },
  "keywords": [
    "accessibility",
    "a11y",
    "testing",
    "jest",
    "playwright",
    "puppeteer",
    "mocha",
    "jasmine",
    "axe",
    "test-runner"
  ],
  "author": "alex@peaksoftware.dev",
  "license": "MIT",
  "repository": {
    "url": "https://github.com/peaksoftware/axe-testing-library"
  },
  "publishConfig": {
    "access": "public"
  },
  "engines": {
    "node": ">=20.0.0"
  },
  "peerDependencies": {
    "@playwright/test": ">=1",
    "axe-core": "^4",
    "jest": ">=27",
    "vitest": ">=2"
  },
  "peerDependenciesMeta": {
    "jest": {
      "optional": true
    },
    "vitest": {
      "optional": true
    },
    "@playwright/test": {
      "optional": true
    }
  },
  "dependencies": {
    "axe-core": "^4"
  },
  "devDependencies": {
    "@changesets/changelog-github": "^0.5.1",
    "@changesets/cli": "^2.28.1",
    "@playwright/test": "^1.51.0",
    "@types/jest": "^29.5.14",
    "@types/jsdom": "^21.1.7",
    "@types/node": "^22.13.10",
    "@typescript-eslint/eslint-plugin": "^8.26.0",
    "@typescript-eslint/parser": "^8.26.0",
    "eslint": "^9.21.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "jsdom": "^26.0.0",
    "playwright-core": "^1.50.1",
    "ts-jest": "^29.2.6",
    "ts-node": "^10.9.2",
    "tsup": "^8.4.0",
    "typescript": "^5.8.2",
    "vitest": "^3.0.8"
  }
}
